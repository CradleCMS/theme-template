{
    "unique_theme_id":"pictionary",
    "version":"0.0.5",
    "description":"Pictionary is a theme for very photo-oriented webshops, which brings out the best in your products.",
    "locale":{
        "products":{
            "general":{
                "back":"Back"
            }
        },
        "search":{
            "general":{
                "results_for_x":"results for '%s'"
            }
        }
    },
    "header":{
        "caption":"Header",
        "type":"section",
        "settings":{
            "logo_options":{
                "caption":"Logo Options",
                "type":"header"
            },
            "logo_use_image":{
                "caption":"Use Custom Logo",
                "type":"checkbox",
                "default":false
            },
            "logo_image":{
                "caption":"Custom Logo",
                "type":"asset",
                "filename":"logo.png",
                "max-width":1200,
                "max-height":1200
            },
            "favicon":{
                "caption":"Favicon",
                "type":"header"
            },
            "favicon_enable":{
                "caption":"Enable custom favicon",
                "type":"checkbox",
                "default":false
            },
            "favicon_image":{
                "caption":"Favicon",
                "type":"asset",
                "filename":"favicon.png",
                "max-width":32,
                "max-height":32,
                "description":"32px x 32px png"
             },
            "header_icons":{
                "caption":"Search icon",
                "type":"header"
            },
            "show_search_header":{
                "caption":"Show search icon in header",
                "type":"checkbox",
                "default": false
            }
        }
    },
    "slideshow":{
        "caption":"Top Slideshow",
        "type":"section",
        "settings":{
            "slideshow":{
                "caption":"Slideshow",
                "type":"header"
            },
            "color_homepage":{
                "caption":"Homepage Colors",
                "type":"color",
                "default":"#bbbbbb",
                "description":"For buttons and logo"
            },
            "color_homepage_overlay":{
                "caption":"Slideshow Overlay Color",
                "type":"color",
                "default":"#333333"
            },
            "slideshow_overlay_opacity":{
                "caption":"Slideshow Overlay Opacity",
                "type":"select",
                "default":"50",
                "options":[
                    {"value":"1","caption":"1%"},
                    {"value":"10","caption":"10%"},
                    {"value":"15","caption":"15%"},
                    {"value":"20","caption":"20%"},
                    {"value":"30","caption":"30%"},
                    {"value":"40","caption":"40%"},
                    {"value":"50","caption":"50%"},
                    {"value":"75","caption":"75%"},
                    {"value":"90","caption":"90%"},
                    {"value":"100","caption":"100%"}
                ]
            },
            "logo_frontpage":{
                "caption":"Logo Frontpage Setting",
                "type":"select",
                "default":"use_header_logo",
                "options":[
                    {"value":"use_shop_name","caption":"Use Shops name (text)"},
                    {"value":"use_header_logo","caption":"Use header logo"},
                    {"value":"use_custom","caption":"Use Custom Logo"}
                ]
            },
            "logo_image_frontpage":{
                "caption":"Custom Logo for Homepage",
                "type":"asset",
                "filename":"logo_front.png",
                "max-width":1200,
                "max-height":1200
            },
            "logo_padding_top":{
                "caption":"Frontpage logo top padding",
                "type":"text",
                "default":"0em"
            },
            "slideshow_slides":{
                "caption":"Slide",
                "type":"struct",
                "struct":{
                    "slide_image":{
                        "caption":"Image for slide",
                        "type":"asset",
                        "filename":"slide.jpg",
                        "max-width":1920,
                        "description":"Recommended size 1920x540"
                    }
                }
            }
        }    
    },
    "homepage":{
        "caption":"Homepage",
        "type":"section",
        "settings":{
            "site":{
                "caption":"Site",
                "type":"header"
            },
            "site_width": {
                "caption":"Site max width",
                "type":"select",
                "default":"100%",
                "options":[
                    {"value":"100%","caption":"Fluid"},
                    {"value":"1004px","caption":"Small (VGA)"},
                    {"value":"1260px","caption":"Medium (XGA)"},
                    {"value":"1900px","caption":"Large (HD)"}
                ]
            },
            "content":{
                "caption":"Content",
                "type":"header"
            },
            "featured_collections_title":{
                "caption":"Featured Collections title",
                "type":"text",
                "default":"Featured Collections"
            },
            "featured_collections":{
                "caption":"Featured Collections",
                "type":"struct",
                "struct":{
                    "featured_collection":{
                        "caption":"Collection",
                        "type":"collection"
                    }
                }
            },
            "homepage_page_enable": {
                "caption": "Enable content page",
                "type": "checkbox",
                "default": false
            },
            "homepage_page":{
                "caption":"Show content from this page",
                "type":"page",
                "default":"welcome"
            },
            "featured_products": {
                "caption": "Featured Products",
                "type": "struct",
                "struct": {
                    "heading": {
                        "caption": "Title",
                        "type": "text",
                        "default": ""
                    },
                    "description": {
                        "caption":"Description",
                        "type": "textarea",
                        "default": ""
                    },
                    "collection": {
                        "caption": "Collection",
                        "type": "collection"
                    },
                    "limit": {
                       "type": "select",
                        "options": [
                        {
                            "value": "1",
                            "caption": "Display One"
                        }, 
                        {
        	                "value": "2",
        	                "caption": "Display Two"
                        },
                        {
        	                "value": "3",
        	                "caption": "Display Three"
                        }
                        ]
                    }
                }
            },
            "homepage_all_collections":{
                "caption":"All Collections",
                "type":"header"
            },
            "all_collections_enable":{
                "caption":"Show All Collections",
                "type":"checkbox",
                "default":false
            },
            "all_collections_heading": {
                "caption": "Heading",
                "type": "text",
                "default": ""
            },
            "blog_news":{
                "caption":"News blog",
                "type":"header"
            },
            "blog_news_enable":{
                "caption":"Show News section",
                "type":"checkbox",
                "default":false
            },
            "newsletter_form":{
                "caption":"Newsletter form",
                "type":"header"
            },
            "footer_newsletter_enable":{
                "caption":"Show Newsletter Field",
                "type":"checkbox",
                "default":false
            }
        }
    },
    "products":{
        "caption":"Products",
        "type":"section",
        "settings":{
            "skip_first_product_image":{
                "caption":"Skip first product image",
                "type":"checkbox",
                "default":false
            },
            "product_photo_size":{
                "caption":"photo size",
                "type":"select",
                "default":"large",
                "options":[
                    {"value":"medium","caption":"Medium"},
                    {"value":"large","caption":"Large"},
                    {"value":"grande","caption":"Grande"}
                ]
            },
            "product_thumbnails_size":{
                "caption":"thumbnails size",
                "type":"select",
                "default":"small",
                "options":[
                    {"value":"tiny","caption":"Tiny"},
                    {"value":"small","caption":"Small"},
                    {"value":"medium","caption":"Medium"},
                    {"value":"large","caption":"Large"}
                ]
            },
            "product_thumbnails_position":{
                "caption":"thumbnails position",
                "type":"select",
                "default":"right",
                "options":[
                    {"value":"left","caption":"Left"},
                    {"value":"right","caption":"Right"},
                    {"value":"bottom","caption":"Bottom"}
                ]
            }
        }
    },
    "collections":{
        "caption":"Collections",
        "type":"section",
        "settings":{
            "collection_image_type":{
                "caption":"Collection image type",
                "type":"select",
                "default":"portrait",
                "options":[
                    {"value":"portrait","caption":"Portrait, square"},
                    {"value":"landscape","caption":"Wide, landscape"}
                ]
            },
            "collection_image_size":{
                "caption":"Collection image size",
                "type":"select",
                "default":"l",
                "options":[
                    {"value":"s","caption":"Small"},
                    {"value":"m","caption":"Medium"},
                    {"value":"l","caption":"Large"},
                    {"value":"xl","caption":"XLarge"}
                ]
            },
            "collection_image_spacing":{
                "caption":"Space between products",
                "type":"checkbox",
                "default":false
            },
            "collection_display_vendor":{
                "caption":"Display product vendor",
                "type":"checkbox",
                "default":false
            },
            "collection_info_hover":{
                "caption":"Use hover on desktop",
                "type":"checkbox",
                "default":true
            },
            "collection_info_position":{
                "caption":"Product info position",
                "type":"select",
                "default":"bottom",
                "options":[
                    {"value":"top","caption":"Top"},
                    {"value":"bottom","caption":"Bottom"}
                ]
            },
            "collection_linklist":{
                "caption":"Navigation under header on all collection pages",
                "type":"linklist",
                "default":"main-menu"
            },
            "pagination":{
                "caption":"Pagination",
                "type":"header"
            },
            "pagination_style":{
                "caption":"Paginatin Style",
                "type":"select",
                "options":[
                    {"value":"show_more","caption":"Show more button"},
                    {"value":"numbered","caption":"Numbered Pages"}
                ]
            }
        }
    },
    "blogs":{
        "caption":"Blogs",
        "type":"section",
        "settings":{
            "show_author_name":{
                "caption":"Show name of Author",
                "type":"checkbox",
                "default":false
            }
        }
    },
    "footer":{
        "caption":"Footer",
        "type":"section",
        "settings":{
            "footer_content" : {
                "caption": "Content",
                "type": "textarea"
            },
            "footer_copy" : {
                "caption": "Copyright",
                "type": "text",
                "default": ""
            },
            "quick_links":{
                "caption":"Quick links",
                "type":"header"
            },
            "footer_quicklinks_enable":{
                "caption":"Show quick links",
                "type":"checkbox",
                "default":true
            },
            "footer_quicklinks_linklist":{
                "caption":"Quick links link list",
                "type":"linklist",
                "default":"footer"
            },
            "social_media":{
                "caption":"Social Media",
                "type":"header"
            },
            "footer_social_enable":{
                "caption":"Show social media links",
                "type":"checkbox",
                "default":false
            }
        }
    },
    "cart":{
        "caption":"Ecommerce",
        "type":"section",
        "settings":{
            "ecommerce_on":{
                "caption":"Show cart in header and enable checkout",
                "type":"checkbox",
                "default":true
            },
            "ecom_disabled_message":{
                "caption":"Message when not enabled",
                "type":"text",
                "default":"Our shop is closed for the moment"
            },
            "popup_cart_enable":{
                "caption":"Use popup cart",
                "type":"checkbox",
                "default":true
            },
            "cart_notes_enable":{
                "caption":"Enable posibility for customers to leave message in cart",
                "type":"checkbox",
                "default":true
            }
        }
    },
    "social_media":{
        "caption":"Social Media",
        "type":"section", 
        "settings":{
            "share_links":{
                "caption":"Share links",
                "type":"header"
            },
            "share_facebook":{
                "caption":"Share on Facebook",
                "type":"checkbox",
                "default":true
            },
            "share_twitter":{
                "caption":"Share on Twitter",
                "type":"checkbox",
                "default":true
            },
            "share_pinterest":{
                "caption":"Share on Pinterest",
                "type":"checkbox",
                "default":true
            },
            "share_google":{
                "caption":"Share on Google+",
                "type":"checkbox",
                "default":true
            },
            "social_links":{
                "caption":"Social links",
                "type":"header",
                "description":"All links, except the email one, must begin with <i>http://</i>, <i>https://</i> or <i>//</i>. The email must be your email address with no <i>mailto:</i> prefix. Leave the text box blank if you don't want to use the corresponding icon."
            },
            "facebook_url":{
                "caption":"Facebook URL",
                "type":"text"
            },
            "twitter_url":{
                "caption":"Twitter URL",
                "type":"text"
            },
            "pinterest_url":{
                "caption":"Pinterest URL",
                "type":"text"
            },
            "googleplus_url":{
                "caption":"Google+ URL",
                "type":"text"
            },
            "flickr_url":{
                "caption":"Flickr URL",
                "type":"text"
            },
            "instagram_url":{
                "caption":"Instagram URL",
                "type":"text"
            },
            "linkedin_url":{
                "caption":"LinkedIn URL",
                "type":"text"
            },
            "vimeo_url":{
                "caption":"Vimeo URL",
                "type":"text"
            },
            "vimeo_url":{
                "caption":"Vimeo URL",
                "type":"text"
            },
            "youtube_url":{
                "caption":"YouTube URL",
                "type":"text"
            },
            "tumblr_url":{
                "caption":"Tumblr URL",
                "type":"text"
            },
            "featured_blog":{
                "caption":"Blog Feed",
                "type":"blog",
                "default":"news"
            },
            "display_email_icon":{
                "caption":"Display e-mail icon",
                "type":"checkbox",
                "default":true
            },
            "social_icons_style":{
                "caption":"Social icons style",
                "type":"select",
                "options":[
                    {"value":"","caption":"Silhouette"},
                    {"value":"-circle","caption":"Circle"},
                    {"value":"-rounded","caption":"Rounded corners"},
                    {"value":"-square","caption":"Square"}
                ]
            },
            "social_icons_color":{
                "caption":"Color social icons",
                "type":"checkbox",
                "default":false
            }
        }
    },
    "colors":{ 
        "caption":"Colors",
        "type":"section",
        "settings":{
            "general_colors":{ 
                "caption":"General Colors",
                "type":"header"
            },
            "color_sale":{
                "caption":"Sales / Cart dot color",
                "type":"color",
                "default":"#b3a220"
            },
            "color_body_links":{
                "caption":"Body Link Color",
                "type":"color",
                "default":"#3636e0"
            }, 
            "color_buttons":{
                "caption":"Button Color",
                "type":"color",
                "default":"#204a80"
            },
            "color_buttons_text":{
                "caption":"Button Text Color",
                "type":"color",
                "default":"#ffffff"
            },
            "color_body_bg":{
                "caption":"Body Background",
                "type":"color",
                "default":"#ffffff"
            },
            "color_body_headings":{
                "caption":"Headings",
                "type":"color",
                "default":"#333333"
            },
            "color_body_text":{
                "caption":"Body Text",
                "type":"color",
                "default":"#333333"
            },
            "color_borders":{
                "caption":"Border color",
                "type":"color",
                "default":"#e5e5e5"
            },
            "menus":{ 
                "caption":"Menus",
                "type":"header"
            },
            "color_menu_bg":{
                "caption":"Menu Background Color",
                "type":"color",
                "default":"#ffffff"
            },
            "color_menu_text":{
                "caption":"Menu Text Color",
                "type":"color",
                "default":"#000000"
            },
            "color_menu_secondary_bg":{
                "caption":"Secondary Menu Background Color",
                "type":"color",
                "default":"#000000"
            },
            "color_menu_secondary_link":{
                "caption":"Secondary Menu Link Color",
                "type":"color",
                "default":"#cccccc"
            },
            "color_menu_secondary_link_active":{
                "caption":"Secondary Menu Active Link Color",
                "type":"color",
                "default":"#ffffff"
            },
            "sidebar_colors":{ 
                "caption":"Sidebar colors",
                "type":"header"
            },
            "color_sidebar_bg":{
                "caption":"Sidebar Background Color",
                "type":"color",
                "default":"#ffffff"
            },
            "color_sidebar_text":{
                "caption":"Sidebar Text Color",
                "type":"color",
                "default":"#000000"
            },
            "footer_colors":{ 
                "caption":"Footer",
                "type":"header"
            },
            "color_footer_bg":{
                "caption":"Footer background",
                "type":"color",
                "default":"#f2f2f2"
            },
            "color_footer_text":{
                "caption":"Footer text",
                "type":"color",
                "default":"#636363"
            }
        }
    },
    "typography":{
        "caption":"Typography",
        "type":"section",
        "settings":{
            "header_font_family":{
                "caption":"Header font",
                "type":"font",
                "extra_fonts":[
                    "'Source Sans Pro', sans-serif",
                    "'Montserrat'"
                ],
                "default": "Georgia" 
            },
            "header_font_weight":{
                "caption":"Header font weight",
                "type":"select",
                "options":[
                    {"value":"300","caption":"light"},
                    {"value":"500","caption":"medium"},
                    {"value":"700","caption":"bold"}
                ]
            },
            "header_font_spacing":{
                "caption":"Header font letter spacing",
                "type":"select",
                "options":[
                    {"value":"0px","caption":"none"},
                    {"value":"1px","caption":"small"},
                    {"value":"2px","caption":"medium"},
                    {"value":"4px","caption":"large"}
                ]
            },
            "base_font_family":{
                "caption":"Base font",
                "type":"font",
                "extra_fonts":[
                    "'Source Sans Pro'",
                    "'Montserrat'"
                ]
            },
            "base_font_size":{
                "caption":"Base font size",
                "type":"select",
                "options":[
                    {"value":"13px","caption":"13px"},
                    {"value":"14px","caption":"14px"},
                    {"value":"15px","caption":"15px"},
                    {"value":"16px","caption":"16px"}
                ]
            }
        }
    },
    "vendors":{
        "caption":"Vendors",
        "type":"section",
        "settings":{
            "clients": {
                "caption": "Clients",
                "type": "struct",
                "struct": {
                    "name": {
                        "caption": "Name",
                        "type": "text",
                        "default": ""
                    },
                    "project": {
                        "caption": "Reference project",
                        "type": "product"
                    },
                    "image":{
                        "caption":"Logotype in PNG format",
                        "type":"asset",
                        "filename":"vendor.png",
                        "max-width":480,
                        "description":"max width 480px"
                    }
                }
            }
        }
    }
}