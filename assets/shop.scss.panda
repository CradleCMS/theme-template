/*============================================================================
	#Site Nav and Dropdowns
==============================================================================*/
#navigation {
    position:fixed;
    top:0;
    left:-300px;
    bottom:0;
    width:300px;
    z-index:99999999;
    background-color: $colorSidebar;
    font-family: $headerFontStack;
    text-transform: uppercase;
    @include transform(translate3d(0px, 0, 0)); 
    @include transition(all 350ms cubic-bezier(0.57,.06,.05,.95));
    &.is-visible {
        @include transform(translate3d(300px, 0, 0)); 
        .no-csstransforms3d & {
            left:0px;
        }
    }
    .modal--close {
        position:absolute;
        cursor:pointer;
        left:$gutter;
        top:$gutter;
        font-size: em(15px);
    }
    .navigation-menu {
        padding:$gutter;
        padding-top:0;
        position:absolute;
        top:65px;
        left:0;
        right:0;
        bottom:0;
        overflow:auto;
        -webkit-overflow-scrolling: touch;
    }
    color: $colorSidebarText;
    a {
        color: $colorSidebarText;
    }
    .site-nav-main {
        font-size: em(18px);
        a {
            display:block;
            padding: $gutter/2 0px;
            text-decoration:none;
            font-weight:bold;
    
    		&:hover,
    		&:active,
    		&:focus {
    			color: lighten($colorSidebarText, 25%);
    		}
        }
        .panda-icon-ui-arrow-up {
            display:none;
        }
        .site-nav-main--dropdown {
            margin-bottom: $gutter;
            display:none;
            a {
                color: lighten($colorSidebarText, 30%);
                font-weight:normal;
                font-size: em(13px);
                padding: 4px;
                &:hover,
        		&:active,
        		&:focus {
        			color: lighten($colorSidebarText, 50%);
        		}
            }
        }
        .open {
            .site-nav-main--dropdown {
                display:block;
            }
            .panda-icon-ui-arrow-down {
                display:none;
            }
            .panda-icon-ui-arrow-up {
                display:inline;
            }
        }
    }
    .site-nav-footer {
        font-size: em(14px);
        margin: $gutter 0;
        a {
            text-decoration:none;
            display:block;
            padding: $gutter/3 0;
        }
    }
}
