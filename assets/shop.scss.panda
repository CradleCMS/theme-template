/*============================================================================
	#Product Grid
==============================================================================*/
.sold-out {
    opacity:0.6;
}

.on-sale {
    color: {{ settings.color_sale }};
    font-weight:bold;
}

.product-grid {
    .thumbnails {
        .thumbnail {
            cursor: pointer;
        }
        {% if settings.product_thumbnails_position == "bottom" %}
        display: flex;
        flex-wrap: wrap;
        .thumbnail {
            margin: 0 0.25em;
            align-items: center;
        }
        li {
            margin: 0;
        }
        {% endif %}
    }
}
.product-grid-item {
    margin-bottom: 1em;
    a {
        display:block;
        position:relative;
        text-decoration:none;
        height: 100%;
    }
	display: block;
	position:relative;
	text-decoration: none;
	overflow:hidden;
	.product-info {
        padding: 5% 10%;
        padding-top: 0;
	    color: $colorTextBody;
	    
	    .product-title {
	        font-size: 0.9em;	
	        text-transform: none;
	        font-family: $bodyFontStack;
	        min-height: 3.8em;
	        text-align: center;
	        
	        @include at-query ($max, $large){
	           min-height: 3em;
	        }
	    }
	}
	@include at-query ($min, $large) {
    	.product-info {
    	    {% if settings.collection_info_hover %}
    	    position:absolute;
    	    opacity:0;
    	    @include transition(all 450ms cubic-bezier(0.57,.06,.05,.95));
    	    @include transform(translate3d(0, -50%, 0));
    	    {% endif %}
    	    {% if settings.collection_info_position == "bottom" %}
    	    bottom:0;
    	    {% else %}
    	    top:0;
    	    {% endif %}
    	    text-align:center;
    	    left:0;
    	    right:0;
    	}
	}
	a:hover .product-info {
	    opacity:1;
	    @include transform(translate3d(0, 0px, 0)); 
	}
	@include at-query ($max, $medium) {
    	.product-title {
    	    font-size: em(15px);
    	}
	}
	.sale-badge {
	    @include transform(rotate(45deg)); 
	    position:absolute;
	    top:-24px;
	    right:-40px;
	    text-align:center;
	    width:90px;
	    color: #fff;
	    background-color: {{ settings.color_sale }};
	    padding: 40px 4px 4px;
	}
}

.product-grid-image, .collection-grid-image {
	margin: 0 auto;
	display:block;
	opacity:1;
	@include transition(all 450ms cubic-bezier(0.57,.06,.05,.95));
	a:hover & {
	    opacity:0.8;
	}
}

{% if settings.collection_image_spacing %}
.product-collection .grid, 
.product-collection .grid--full {
    margin: 0;
    padding: $gridGutter/2;
   
    @include at-query ($max, $medium) {
        padding: $gridGutter/4;
    }
}
.product-grid-item {
    margin-bottom: $gridGutter;
}
{% endif %}



