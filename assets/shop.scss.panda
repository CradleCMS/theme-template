    background-image: none!important;
    &::before {
        text-shadow: 1px 1px 10px #ccc;
        font-size: 3.5em;
        color:white;
    }
}


#swipebox-prev::before {
    content: "\2039";
}
#swipebox-next::before {
    content: "\203a";
}
#swipebox-close::before {
    content: "\00d7";
}

.swipebox .title div {
    position: absolute;
    color: white;
    top: 50%;
    margin-top: -8px;
    left: 0;
    right: 0;
    font-family: courier, 'Courier Regular', monospace, sans-serif;
    text-transform: none;
}
#swipebox-bottom-bar {
    bottom: 50%;
    margin-bottom: -25px;
    background: transparent;
    width: 100%;
}

#swipebox-arrows {
    max-width: 90%;
}

#swipebox-overlay {
    background-color: #dedede;
}
