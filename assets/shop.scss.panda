    .template-index & {
        bottom:0;
        top:auto;
    }
	a {
		color: $colorNavText;

		&:hover,
		&:active,
		&:focus {
			//background-color: darken($colorNav, 5%);
		}
	}

    >div {
        height: 55px;
        position: absolute;
        width: 100%;
    }
	ul {
	    overflow-x: auto;
        overflow-y: hidden;
		margin: 0;
		-webkit-overflow-scrolling: touch;
		height:55px;
		white-space:nowrap;
	}

	li {
		margin: 0;
		white-space:nowrap;
		display:inline-block;
		position:relative;
	}
	&.text-center {
	    left: 0;
        right: 0;
	}
}
.site-nav, .site-nav--dropdown {
    position:absolute;
    top:0;
    width:100%;
	font-size: em(14px);
	cursor: default;
	@include transform(translate3d(0, 0px, 0)); 
    &.open {
        @include transform(translate3d(0, -55px, 0)); 
    }
    @include transition(all 250ms cubic-bezier(0.57,.06,.05,.95));
	li {
		margin: 0;
	}

	& > li {
		position: relative;
		display: inline-block;
	}
	&.scrollable {
	    width: 100%;
	    height: 100%;
	    overflow: hidden;
	}
	&.scrollable ul {
	    padding-bottom: 1em;
	    box-sizing: content-box;
	}
	&.scrollable:before {
	    background-image:-webkit-linear-gradient(left,rgba($colorNav,0),$colorNav),-webkit-linear-gradient(left,rgba($colorNav,0),$colorNav);
        background-image:-moz-linear-gradient(left,rgba($colorNav,0),$colorNav),-moz-linear-gradient(left,rgba($colorNav,0),$colorNav);
        background-image:-ms-linear-gradient(left,rgba($colorNav,0),$colorNav),-ms-linear-gradient(left,rgba($colorNav,0),$colorNav);
        background-image:-o-linear-gradient(left,rgba($colorNav,0),$colorNav),-o-linear-gradient(left,rgba($colorNav,0),$colorNav);
        content: " ";
        height: 100%;
        position: fixed;
        right: 0px;
        top: 0;
        width: 70px;
        z-index: 50;
        pointer-events: none;
        @include transform(translate3d(0px,0,0));
	}
	&.scrolled:after {
	    background-image:-webkit-linear-gradient(right,rgba($colorNav,0),$colorNav),-webkit-linear-gradient(right,rgba($colorNav,0),$colorNav);
        background-image:-moz-linear-gradient(right,rgba($colorNav,0),$colorNav),-moz-linear-gradient(right,rgba($colorNav,0),$colorNav);
        background-image:-ms-linear-gradient(right,rgba($colorNav,0),$colorNav),-ms-linear-gradient(right,rgba($colorNav,0),$colorNav);
        background-image:-o-linear-gradient(right,rgba($colorNav,0),$colorNav),-o-linear-gradient(right,rgba($colorNav,0),$colorNav);
        background-size:100%;
        content: " ";
        height: 100%;
        left: 0px;
        position: fixed;
        top: 0;
        width: 70px;
        z-index: 50;
        pointer-events: none;
        @include transform(translate3d(0px,0,0));
	}

	a {
	    line-height:55px;
		display: block;
		text-decoration: none;
		padding: 0px $gutter/2; 
		white-space: nowrap;
		text-transform: uppercase;
		font-size: 1.2em;
	}

	@include at-query ($max, $medium) {
		margin: 0 auto;
		text-align: center;
	}
	.site-nav--active > a {
	    color: {{ settings.color_menu_secondary_link_active }};
	}
	.site-nav--active > a:after {
    	background: {{ settings.color_menu_secondary_link_active }} none repeat scroll 0 0;
        content: "";
        display: block;
        height: 2px;
        left: 10px;
        position: absolute;
        bottom:0;
        right: 10px;
    }
}
.no-csstransforms3d .site-nav.open {
    top:-55px;
}
.no-csstransforms3d .site-nav--dropdown.open {
    top:0px;
}

.template-index .site-nav--active > a:after {
    display: none;
}

/*================ Dropdowns ================*/
.site-nav--dropdown {
    top:55px;
}

